@model IEnumerable<HSHOP_Ecommerce.ViewModals.HangHoaVM>

<h3>Có <b>@Model.Count()</b> sản phẩm</h3>
@foreach (var good in Model)
{
    <div class="col-md-6 col-lg-6 col-xl-4">
        <div class="rounded position-relative fruite-item border border-secondary border-top-0 rounded-bottom">
            <div class="fruite-img">
                <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@good.MaHh">
                    <img src="~/Hinh/HangHoa/@good.Hinh" class="img-fluid w-100 rounded-top" alt="">
                </a>
            </div>
            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Fruits</div>
            <div class="p-4 ">
                <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@good.MaHh">
                    <h4>@good.TenHh</h4>
                </a>
                <p>@good.MotaNgan</p>
                <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold mb-0">$@good.DonGia</p>
                    <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                </div>
            </div>
        </div>
    </div>
}