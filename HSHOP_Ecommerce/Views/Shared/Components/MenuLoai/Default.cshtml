@model IEnumerable<HSHOP_Ecommerce.ViewModals.MenuLoaiVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục sản phẩm</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var cate in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa"
                           asp-action="Index"
                           asp-route-loai="@cate.MaLoai">
                            <i class="fas fa-apple-alt me-2"></i>
                            @cate.TenLoai
                        </a>
                        <span>(@cate.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>